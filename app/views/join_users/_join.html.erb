<% if user_signed_in? && current_user.already_joined?(event) %>

  <%= link_to "/events/#{event.id}/join_users", class: "btn btn-secondary border-secondary", method: :delete, remote: true do %>
  		<i class="fab fa-envira mr-2"></i>取り消す
  <% end %>

<% else %>

  <%= link_to "/events/#{event.id}/join_users", class: "btn btn-outline-warning", method: :post, remote: true do %>
  	<i class="fab fa-envira mr-2"></i>参加する
  <% end %>
<% end %>
<div class="mt-2">
	参加人数: <%= @event.join_users.count %><br>
	<% @event.joined_users.each do |user| %>
  		<%= link_to user.username, user %>さん<br>
	<% end %>
</div>