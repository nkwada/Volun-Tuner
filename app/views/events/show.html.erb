<h3>イベント詳細</h3>

	<p>タイトル</p>
	<p><%= @event.title %></p>

	<p>内容</p>
	<p><%= @event.content %></p>

	<p>日付</p>
	<p><%= @event.date %></p>

	<p>時間</p>
	<p><%= @event.time %></p>

	<p>郵便番号</p>
	<p><%= @event.postal_code %></p>

	<p>住所</p>
	<p><%= @event.address %></p>

<!-- 参加機能 -->
	<h3>参加件数: <%= @event.join_users.count %></h3>
	<% if current_user.already_joined?(@event) %>
	  <%= button_to '参加を取り消す', event_join_user_path(@event), method: :delete %>
	<% else %>
	  <%= button_to '参加する', event_join_users_path(@event) %>
	<% end %>
	<h2>参加ユーザー</h2>
	<% @event.joined_users.each do |user| %>
	  <li><%= user.username %></li>
	<% end %>
<!-- ここまで -->

<%= link_to "編集", edit_event_path(@event.id) %>
<%= link_to "イベント一覧へ", events_path %>
